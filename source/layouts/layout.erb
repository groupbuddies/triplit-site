<!doctype html>
<html>
  <head>
    <link href='http://fonts.googleapis.com/css?family=PT+Serif|Open+Sans:300italic' rel='stylesheet' type='text/css'>
    <meta charset="utf-8">
    <meta name="viewport" content="user-scalable=no,width=device-width">

    <!-- Facebook Open Graph Meta Tags -->
    <meta property="og:title" content="Tripl.it app" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="http://tripl.it" />
    <meta property="og:image" content="http://tripl.it/images/logo.png" />
    <meta property="og:description" content="Sharing trip expenses without the hassle. Available on Android and ios, for free." />

    <!-- Always force latest IE rendering engine or request Chrome Frame -->
    <meta content="IE=edge,chrome=1" http-equiv="X-UA-Compatible">

    <!-- Use title if it's in the page YAML frontmatter -->
    <title><%= current_page.data.title || "The Middleman" %></title>

    <%= stylesheet_link_tag "normalize", "all", "../vendor/rrssb/css/rrssb" %>
  </head>
  <body class="<%= page_classes %>">
    <div class="background-image"></div>
    <%= yield %>
  </body>
  <footer class="main-footer">
    <ul>
      <li class="small">Handcrafted by <a href="http://groupbuddies.com" target="_blank">Group Buddies</a></li>
      <li class="small"><a href="privacy-policy.html">Privacy Policy</a></li>
    </ul>
  </footer>
  <%= javascript_include_tag  "all", "../vendor/rrssb/js/vendor/modernizr-2.6.2-respond-1.1.0.min", "../vendor/rrssb/js/rrssb.min" %>
</html>
